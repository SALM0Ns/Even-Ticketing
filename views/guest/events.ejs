<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 fw-bold text-white">
                    <i class="fas fa-calendar-alt me-3"></i>
                    <% if (typeof category !== 'undefined') { %>
                        <%= category.charAt(0).toUpperCase() + category.slice(1) %> Events
                    <% } else { %>
                        All Events
                    <% } %>
                </h1>
                <div class="text-white">
                    <small class="text-light">Showing <%= events.length %> events</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group" role="group">
                <a href="/guest/events" class="btn btn-outline-light <%= (typeof category === 'undefined' || !category) ? 'active' : '' %>">
                    <i class="fas fa-th me-2"></i>All Events
                </a>
                <a href="/guest/events/category/movies" class="btn btn-outline-light <%= (category === 'movies') ? 'active' : '' %>">
                    <i class="fas fa-film me-2"></i>Movies
                </a>
                <a href="/guest/events/category/stage-plays" class="btn btn-outline-light <%= (category === 'stage-plays') ? 'active' : '' %>">
                    <i class="fas fa-theater-masks me-2"></i>Stage Plays
                </a>
                <a href="/guest/events/category/orchestra" class="btn btn-outline-light <%= (category === 'orchestra') ? 'active' : '' %>">
                    <i class="fas fa-music me-2"></i>Live Orchestra
                </a>
            </div>
        </div>
    </div>

    <!-- Events Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        <% if (events.length === 0) { %>
            <div class="col">
                <div class="text-center py-5">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle fa-3x mb-3"></i>
                        <h4>No events available</h4>
                        <p class="mb-0">There are no upcoming events at the moment. Please check back later!</p>
                    </div>
                </div>
            </div>
        <% } else { %>
            <% events.forEach(event => { %>
                <div class="col">
                    <div class="card event-card h-100 category-<%= event.category %>">
                        <img src="<%= event.image || '/images/default-event.jpg' %>" class="card-img-top" alt="<%= event.name %>">
                        <div class="category-badge <%= event.category %>">
                            <i class="<%= event.category === 'movies' ? 'fas fa-film' : event.category === 'stage-plays' ? 'fas fa-theater-masks' : 'fas fa-music' %> me-1"></i>
                            <%= event.category === 'movies' ? 'Movies' : event.category === 'stage-plays' ? 'Stage Plays' : 'Live Orchestra' %>
                        </div>
                        <div class="event-status status-upcoming">Upcoming</div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= event.name %></h5>
                            <p class="card-text flex-grow-1"><%= event.description.substring(0, 100) %>...</p>
                            <div class="mt-auto">
                                <p class="text-muted mb-2">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    <%= new Date(event.date).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </p>
                                <p class="text-muted mb-3">
                                    <i class="fas fa-map-marker-alt me-1"></i><%= event.location.name %>
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary mb-0">$<%= event.pricing.basePrice %></span>
                                    <a href="<%= user ? `/events/${event._id}` : `/guest/events/${event._id}` %>" class="btn btn-primary">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <% if (!user) { %>
    <!-- Call to Action for Registration -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body text-center py-5">
                    <h3 class="card-title mb-3">
                        <i class="fas fa-ticket-alt me-2"></i>
                        Ready to Book Tickets?
                    </h3>
                    <p class="card-text mb-4">
                        Create an account to purchase tickets and manage your bookings
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/auth/register" class="btn btn-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Sign Up Now
                        </a>
                        <a href="/auth/login?redirect=<%= encodeURIComponent('/events') %>" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
