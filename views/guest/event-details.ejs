<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Event Image -->
            <div class="mb-4">
                <img src="<%= event.image || '/images/default-event.jpg' %>" 
                     class="img-fluid rounded shadow" 
                     alt="<%= event.name %>"
                     style="width: 100%; height: 400px; object-fit: cover;">
            </div>

            <!-- Event Details -->
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="card-title display-5 fw-bold"><%= event.name %></h1>
                        <span class="badge bg-primary fs-6">
                            <%= event.category === 'movies' ? 'Movies' : event.category === 'stage-plays' ? 'Stage Plays' : 'Live Orchestra' %>
                        </span>
                    </div>
                    
                    <p class="lead text-muted mb-4"><%= event.description %></p>
                    
                    <!-- Event Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5><i class="fas fa-calendar-alt text-primary me-2"></i>Event Date</h5>
                            <p class="text-muted">
                                <%= new Date(event.date).toLocaleDateString('en-US', { 
                                    weekday: 'long',
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-map-marker-alt text-primary me-2"></i>Venue</h5>
                            <p class="text-muted">
                                <strong><%= event.location.name %></strong><br>
                                <%= event.location.address %><br>
                                <%= event.location.city %>
                            </p>
                        </div>
                    </div>

                    <!-- Pricing Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5><i class="fas fa-tag text-primary me-2"></i>Ticket Pricing</h5>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="card border-primary">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">Regular</h6>
                                            <h4 class="text-primary">$<%= event.pricing.basePrice %></h4>
                                        </div>
                                    </div>
                                </div>
                                <% if (event.pricing.vipPrice) { %>
                                <div class="col-md-3">
                                    <div class="card border-warning">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">VIP</h6>
                                            <h4 class="text-warning">$<%= event.pricing.vipPrice %></h4>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% if (event.pricing.studentPrice) { %>
                                <div class="col-md-3">
                                    <div class="card border-success">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">Student</h6>
                                            <h4 class="text-success">$<%= event.pricing.studentPrice %></h4>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% if (event.pricing.seniorPrice) { %>
                                <div class="col-md-3">
                                    <div class="card border-info">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">Senior</h6>
                                            <h4 class="text-info">$<%= event.pricing.seniorPrice %></h4>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Category-specific Details -->
                    <% if (event.category === 'movies' && event.movieDetails) { %>
                    <div class="mb-4">
                        <h5><i class="fas fa-film text-primary me-2"></i>Movie Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Director:</strong> <%= event.movieDetails.director %></p>
                                <p><strong>Duration:</strong> <%= event.movieDetails.duration %> minutes</p>
                                <p><strong>Rating:</strong> <%= event.movieDetails.rating %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Genre:</strong> <%= event.movieDetails.genre.join(', ') %></p>
                                <p><strong>Language:</strong> <%= event.movieDetails.language %></p>
                                <p><strong>Subtitles:</strong> <%= event.movieDetails.subtitles ? 'Yes' : 'No' %></p>
                            </div>
                        </div>
                    </div>
                    <% } %>

                    <% if (event.category === 'stage-plays' && event.stagePlayDetails) { %>
                    <div class="mb-4">
                        <h5><i class="fas fa-theater-masks text-primary me-2"></i>Stage Play Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Playwright:</strong> <%= event.stagePlayDetails.playwright %></p>
                                <p><strong>Duration:</strong> <%= event.stagePlayDetails.duration %> minutes</p>
                                <p><strong>Age Restriction:</strong> <%= event.stagePlayDetails.ageRestriction %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Genre:</strong> <%= event.stagePlayDetails.genre.join(', ') %></p>
                                <p><strong>Language:</strong> <%= event.stagePlayDetails.language %></p>
                                <p><strong>Intermission:</strong> <%= event.stagePlayDetails.intermission ? 'Yes' : 'No' %></p>
                            </div>
                        </div>
                    </div>
                    <% } %>

                    <% if (event.category === 'orchestra' && event.orchestraDetails) { %>
                    <div class="mb-4">
                        <h5><i class="fas fa-music text-primary me-2"></i>Orchestra Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Conductor:</strong> <%= event.orchestraDetails.conductor %></p>
                                <p><strong>Duration:</strong> <%= event.orchestraDetails.duration %> minutes</p>
                                <p><strong>Dress Code:</strong> <%= event.orchestraDetails.dressCode %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Program:</strong> <%= event.orchestraDetails.program %></p>
                                <p><strong>Intermission:</strong> <%= event.orchestraDetails.intermission ? 'Yes' : 'No' %></p>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <% if (!user) { %>
            <!-- Call to Action -->
            <div class="card bg-primary text-white mb-4">
                <div class="card-body text-center">
                    <h4 class="card-title mb-3">
                        <i class="fas fa-ticket-alt me-2"></i>
                        Ready to Book?
                    </h4>
                    <p class="card-text mb-4">
                        Create an account to purchase tickets for this event
                    </p>
                    <div class="d-grid gap-2">
                        <a href="/auth/register" class="btn btn-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Sign Up Now
                        </a>
                        <a href="/auth/login?redirect=<%= encodeURIComponent(`/events/${event._id}`) %>" class="btn btn-outline-light">
                            <i class="fas fa-sign-in-alt me-2"></i>Already have an account?
                        </a>
                    </div>
                </div>
            </div>
            <% } else { %>
            <div class="card bg-primary text-white mb-4">
                <div class="card-body text-center">
                    <h4 class="card-title mb-3">
                        <i class="fas fa-ticket-alt me-2"></i>
                        Ready to Book?
                    </h4>
                    <p class="card-text mb-4">
                        Continue to seat selection and secure your tickets.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="/attendee/buy/<%= event._id %>" class="btn btn-light btn-lg">
                            <i class="fas fa-ticket-alt me-2"></i>Buy Tickets Now
                        </a>
                    </div>
                </div>
            </div>
            <% } %>

            <!-- Event Organizer -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-building me-2"></i>Organizer
                    </h5>
                    <p class="card-text">
                        <strong><%= event.organizer.name %></strong><br>
                        <small class="text-muted">Event Organizer</small>
                    </p>
                </div>
            </div>

            <!-- Event Status -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-info-circle me-2"></i>Event Status
                    </h5>
                    <p class="card-text">
                        <span class="badge bg-success fs-6">Upcoming</span><br>
                        <small class="text-muted">This event is currently available for booking</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
