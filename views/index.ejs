function createEventCard(event, category, isComingSoon = false, isStartingSoon = false) {
    const eventDate = new Date(event.date);
    const formattedDate = eventDate.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    });

    const categoryColors = {
        'movies': 'primary',
        'stage-plays': 'success',
        'orchestra': 'warning',
        'event': 'secondary'
    };

    const categoryIcons = {
        'movies': 'fas fa-film',
        'stage-plays': 'fas fa-theater-masks',
        'orchestra': 'fas fa-music',
        'event': 'fas fa-calendar'
    };

    const categoryNames = {
        'movies': 'Movies',
        'stage-plays': 'Stage Plays',
        'orchestra': 'Live Orchestra',
        'event': 'Event'
    };

    const displayCategory = isComingSoon
        ? 'orchestra'
        : (isStartingSoon ? 'movies' : (category || event.category || 'event'));

    const color = categoryColors[displayCategory] || 'primary';
    const icon = categoryIcons[displayCategory] || 'fas fa-calendar';
    const categoryName = categoryNames[displayCategory] || categoryNames.event;
    const priceRaw = event?.pricing?.basePrice;
    const priceNumber = Number(priceRaw);
    const hasValidPrice = priceRaw !== undefined && priceRaw !== null && !Number.isNaN(priceNumber);
    const formattedPrice = hasValidPrice
        ? `$${priceNumber.toFixed(2)}`
        : 'Free';
    const venueName = event?.location?.name || 'Venue TBA';
    const fullDescription = event?.description || 'Experience this amazing event';
    const trimmedDescription = fullDescription.length > 120
        ? `${fullDescription.slice(0, 120)}...`
        : fullDescription;
    const horizontalPriceLabel = formattedPrice === 'Free' ? 'Free' : `From ${formattedPrice}`;

    let badgeHtml = '';
    if (isComingSoon) {
        badgeHtml = '<span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">Live Orchestra</span>';
    } else if (isStartingSoon) {
        badgeHtml = '<span class="badge bg-danger position-absolute top-0 end-0 m-2">Movie</span>';
    }

    if (!isComingSoon && !isStartingSoon) {
        return `
            <div class="col-12 col-md-6 col-xl-4">
                <div class="card event-card h-100 category-${displayCategory}">
                    <div class="position-relative">
                        <img src="${event.image || '/images/default-event.jpg'}" class="card-img-top" alt="${event.name}" style="height: 220px; object-fit: cover;">
                        <div class="category-badge ${displayCategory}">
                            <i class="${icon} me-1"></i>${categoryName}
                        </div>
                        <div class="event-status status-upcoming">Upcoming</div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">${event.name}</h5>
                        <p class="card-text flex-grow-1">${trimmedDescription}</p>
                        <div class="mt-auto">
                            <p class="text-muted mb-2">
                                <i class="fas fa-calendar-alt me-1"></i>${formattedDate}
                            </p>
                            <p class="text-muted mb-3">
                                <i class="fas fa-map-marker-alt me-1"></i>${venueName}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-${color} mb-0">${formattedPrice}</span>
                                <a href="/events/${event._id}" class="btn btn-${color}">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }

    return `
        <div class="col-12 mb-4">
            <div class="event-poster-card-horizontal position-relative d-flex" onclick="navigateToEvent('${event._id}', '${displayCategory}')">
                <div class="poster-container-horizontal">
                    <img src="${event.image || '/images/default-event.jpg'}" alt="${event.name}" class="event-poster-horizontal">
                    ${badgeHtml}
                </div>
                <div class="event-content-horizontal flex-grow-1 p-4">
                    <h4 class="event-title-horizontal mb-3">${event.name}</h4>
                    <p class="event-description-horizontal mb-3">${event.description || 'Experience this amazing event'}</p>
                    <div class="event-details-horizontal mb-3">
                        <p class="event-date-horizontal mb-2">
                            <i class="fas fa-calendar-alt me-2"></i>${formattedDate}
                        </p>
                        <p class="event-venue-horizontal mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>${venueName}
                        </p>
                        <p class="event-price-horizontal mb-2">
                            <i class="fas fa-tag me-2"></i>${horizontalPriceLabel}
                        </p>
                    </div>
                    <div class="event-actions-horizontal">
                        <a class="btn btn-${color} btn-lg" href="/events/${event._id}">
                            <i class="${icon} me-2"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    `;
}

function navigateToEvent(eventId, category) {
    window.location.href = `/events/${eventId}/book`;
}

// Smooth scrolling for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }
    });
});
