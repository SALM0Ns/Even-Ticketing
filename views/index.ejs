function loadMovies() {
    fetch('/api/events/movies')
        .then(response => response.json())
        .then(data => {
            const container = document.getElementById('movies-container');
            container.innerHTML = '';
            if (data.events.length === 0) {
                container.innerHTML = `
                    <div class="col-12 text-center">
