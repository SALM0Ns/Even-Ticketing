<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                CursedTicket
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/auth/register">
                    <i class="fas fa-user-plus me-1"></i>Register
                </a>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg border-0 mt-5">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Welcome Back
                        </h2>
                        <p class="mb-0 mt-2">Sign in to your CursedTicket account</p>
                    </div>
                    <div class="card-body p-5">
                        <form action="/auth/login" method="POST" id="loginForm">
                            <input type="hidden" name="redirect" value="<%= typeof redirectTo !== 'undefined' ? redirectTo : (formData && formData.redirect) || '' %>">
                            <!-- Email Field -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control" id="email" name="email" 
                                           value="<%= (typeof formData !== 'undefined' && formData) ? formData.email : '' %>" 
                                           placeholder="Enter your email" required>
                                </div>
                                <% if (typeof errors !== 'undefined' && errors && errors.find(e => e.path === 'email')) { %>
                                    <div class="text-danger small mt-1">
                                        <%= errors.find(e => e.path === 'email').msg %>
                                    </div>
                                <% } %>
                            </div>

                            <!-- Password Field -->
                            <div class="mb-4">
                                <label for="password" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control" id="password" name="password" 
                                           placeholder="Enter your password" required>
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <% if (typeof errors !== 'undefined' && errors && errors.find(e => e.path === 'password')) { %>
                                    <div class="text-danger small mt-1">
                                        <%= errors.find(e => e.path === 'password').msg %>
                                    </div>
                                <% } %>
                            </div>

                            <!-- Remember Me & Forgot Password -->
                            <div class="row mb-4">
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                                        <label class="form-check-label" for="rememberMe">
                                            Remember me
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6 text-end">
                                    <a href="#" class="text-decoration-none small">
                                        Forgot password?
                                    </a>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Sign In
                                </button>
                            </div>
                        </form>

                        <!-- Register Link -->
                        <div class="text-center mt-4">
                            <p class="mb-0">Don't have an account? 
                                <a href="/auth/register" class="text-decoration-none">
                                    <i class="fas fa-user-plus me-1"></i>Create Account
                                </a>
                            </p>
                        </div>

                        <!-- Role Information -->
                        <div class="mt-4">
                            <div class="card bg-light">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Account Types
                                    </h6>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i>
                                                <strong>Attendee:</strong><br>
                                                Buy tickets and attend events
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar-plus me-1"></i>
                                                <strong>Organizer:</strong><br>
                                                Create and manage events
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>CursedTicket</h5>
                    <p>Your premier destination for premium entertainment tickets.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 CursedTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Password visibility toggle
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('password');
            const eyeIcon = togglePassword.querySelector('i');

            togglePassword.addEventListener('click', function() {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    eyeIcon.classList.remove('fa-eye');
                    eyeIcon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    eyeIcon.classList.remove('fa-eye-slash');
                    eyeIcon.classList.add('fa-eye');
                }
            });

            // Form validation
            const loginForm = document.getElementById('loginForm');
            loginForm.addEventListener('submit', function(e) {
                const email = document.getElementById('email').value.trim();
                const password = document.getElementById('password').value;

                if (!email || !password) {
                    e.preventDefault();
                    alert('Please fill in all required fields.');
                    return;
                }

                // Basic email validation
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    e.preventDefault();
                    alert('Please enter a valid email address.');
                    return;
                }
            });

            // Check for pending checkout after successful login
            const pendingCheckout = sessionStorage.getItem('pendingCheckout');
            if (pendingCheckout) {
                try {
                    const checkoutData = JSON.parse(pendingCheckout);
                    console.log('🛒 Pending checkout found:', checkoutData);
                    
                    // Show notification about pending checkout
                    const notification = document.createElement('div');
                    notification.className = 'alert alert-info alert-dismissible fade show';
                    notification.innerHTML = `
                        <i class="fas fa-shopping-cart me-2"></i>
                        <strong>Pending Purchase:</strong> You have ${checkoutData.selectedSeats.length} seat(s) selected for ${checkoutData.eventName}.
                        <br><small>After login, you'll be redirected to complete your purchase.</small>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    
                    const form = document.querySelector('form');
                    form.parentNode.insertBefore(notification, form);
                } catch (error) {
                    console.error('Error parsing pending checkout:', error);
                    sessionStorage.removeItem('pendingCheckout');
                }
            }
        });
    </script>
</body>
</html>
