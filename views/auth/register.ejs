<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                CursedTicket
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/auth/login">
                    <i class="fas fa-sign-in-alt me-1"></i>Login
                </a>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 mt-5">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0">
                            <i class="fas fa-user-plus me-2"></i>
                            Create Account
                        </h2>
                        <p class="mb-0 mt-2">Join CursedTicket for premium entertainment</p>
                    </div>
                    <div class="card-body p-5">
                        <form action="/auth/register" method="POST" id="registerForm">
                            <!-- Role Selection -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Account Type *</label>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="role" id="attendee" value="attendee" 
                                                   <%= (typeof formData !== 'undefined' && formData && formData.role === 'attendee') ? 'checked' : 'checked' %>>
                                            <label class="form-check-label" for="attendee">
                                                <i class="fas fa-user me-2"></i>
                                                <strong>Attendee</strong>
                                                <small class="d-block text-muted">Buy tickets and attend events</small>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="role" id="organizer" value="organizer"
                                                   <%= (typeof formData !== 'undefined' && formData && formData.role === 'organizer') ? 'checked' : '' %>>
                                            <label class="form-check-label" for="organizer">
                                                <i class="fas fa-calendar-plus me-2"></i>
                                                <strong>Organizer</strong>
                                                <small class="d-block text-muted">Create and manage events</small>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <% if (errors && errors.find(e => e.path === 'role')) { %>
                                    <div class="text-danger small mt-1">
                                        <%= errors.find(e => e.path === 'role').msg %>
                                    </div>
                                <% } %>
                            </div>

                            <!-- Basic Information -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Full Name *</label>
                                        <input type="text" class="form-control" id="name" name="name" 
                                               value="<%= (typeof formData !== 'undefined' && formData) ? formData.name : '' %>" required>
                                        <% if (errors && errors.find(e => e.path === 'name')) { %>
                                            <div class="text-danger small mt-1">
                                                <%= errors.find(e => e.path === 'name').msg %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email Address *</label>
                                        <input type="email" class="form-control" id="email" name="email" 
                                               value="<%= (typeof formData !== 'undefined' && formData) ? formData.email : '' %>" required>
                                        <% if (errors && errors.find(e => e.path === 'email')) { %>
                                            <div class="text-danger small mt-1">
                                                <%= errors.find(e => e.path === 'email').msg %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- Password Fields -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password *</label>
                                        <input type="password" class="form-control" id="password" name="password" required>
                                        <% if (errors && errors.find(e => e.path === 'password')) { %>
                                            <div class="text-danger small mt-1">
                                                <%= errors.find(e => e.path === 'password').msg %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Confirm Password *</label>
                                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                        <% if (errors && errors.find(e => e.path === 'confirmPassword')) { %>
                                            <div class="text-danger small mt-1">
                                                <%= errors.find(e => e.path === 'confirmPassword').msg %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- Optional Information -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="phone" class="form-label">Phone Number</label>
                                        <input type="tel" class="form-control" id="phone" name="phone" 
                                               value="<%= (typeof formData !== 'undefined' && formData) ? formData.phone : '' %>">
                                    </div>
                                </div>
                                <div class="col-md-6" id="dateOfBirthGroup">
                                    <div class="mb-3">
                                        <label for="dateOfBirth" class="form-label">Date of Birth</label>
                                        <input type="text" class="form-control" id="dateOfBirth" name="dateOfBirth" 
                                               placeholder="DD/MM/YYYY or YYYY-MM-DD"
                                               value="<%= (typeof formData !== 'undefined' && formData) ? formData.dateOfBirth : '' %>">
                                        <small class="text-muted">Format: DD/MM/YYYY or YYYY-MM-DD</small>
                                        <% if (errors && errors.find(e => e.path === 'dateOfBirth')) { %>
                                            <div class="text-danger small mt-1">
                                                <%= errors.find(e => e.path === 'dateOfBirth').msg %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- Organizer-specific fields -->
                            <div id="organizerFields" style="display: none;">
                                <div class="mb-3">
                                    <label for="companyName" class="form-label">Company Name *</label>
                                    <input type="text" class="form-control" id="companyName" name="companyName" 
                                           value="<%= (typeof formData !== 'undefined' && formData) ? formData.companyName : '' %>">
                                    <% if (errors && errors.find(e => e.path === 'companyName')) { %>
                                        <div class="text-danger small mt-1">
                                            <%= errors.find(e => e.path === 'companyName').msg %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Create Account
                                </button>
                            </div>
                        </form>

                        <!-- Login Link -->
                        <div class="text-center mt-4">
                            <p class="mb-0">Already have an account? 
                                <a href="/auth/login" class="text-decoration-none">
                                    <i class="fas fa-sign-in-alt me-1"></i>Sign In
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>CursedTicket</h5>
                    <p>Your premier destination for premium entertainment tickets.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 CursedTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Show/hide organizer fields based on role selection
        document.addEventListener('DOMContentLoaded', function() {
            const roleInputs = document.querySelectorAll('input[name="role"]');
            const organizerFields = document.getElementById('organizerFields');
            const companyNameInput = document.getElementById('companyName');
            const dateOfBirthGroup = document.getElementById('dateOfBirthGroup');
            const dateOfBirthInput = document.getElementById('dateOfBirth');

            function toggleOrganizerFields() {
                const selectedRole = document.querySelector('input[name="role"]:checked').value;
                if (selectedRole === 'organizer') {
                    organizerFields.style.display = 'block';
                    companyNameInput.required = true;
                    dateOfBirthGroup.style.display = 'none';
                    dateOfBirthInput.required = false;
                    dateOfBirthInput.value = '';
                } else {
                    organizerFields.style.display = 'none';
                    companyNameInput.required = false;
                    dateOfBirthGroup.style.display = '';
                    dateOfBirthInput.required = false;
                }
            }

            roleInputs.forEach(input => {
                input.addEventListener('change', toggleOrganizerFields);
            });

            // Initialize on page load
            toggleOrganizerFields();

            // Password confirmation validation
            const password = document.getElementById('password');
            const confirmPassword = document.getElementById('confirmPassword');

            function validatePassword() {
                if (password.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity("Passwords don't match");
                } else {
                    confirmPassword.setCustomValidity('');
                }
            }

            password.addEventListener('change', validatePassword);
            confirmPassword.addEventListener('keyup', validatePassword);
        });
    </script>
</body>
</html>
