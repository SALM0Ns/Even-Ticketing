<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                CursedTicket
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <% if (user.role === 'organizer') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/events/create">
                                <i class="fas fa-plus me-1"></i>Create Event
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/organizer/dashboard">
                                <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                            </a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link active" href="/profile">
                            <i class="fas fa-user me-1"></i><%= user.name %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <!-- Profile Card -->
                <div class="card shadow">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-user-circle fa-5x text-primary"></i>
                        </div>
                        <h4 class="card-title"><%= user.name %></h4>
                        <p class="card-text">
                            <span class="badge bg-<%= user.role === 'organizer' ? 'success' : 'info' %>">
                                <i class="fas fa-<%= user.role === 'organizer' ? 'calendar-plus' : 'user' %> me-1"></i>
                                <%= user.role === 'organizer' ? 'Organizer' : 'Attendee' %>
                            </span>
                        </p>
                        <p class="text-muted"><%= user.email %></p>
                        <% if (user.profile.phone) { %>
                            <p class="text-muted">
                                <i class="fas fa-phone me-1"></i>
                                <%= user.profile.phone %>
                            </p>
                        <% } %>
                        <% if (user.profile.dateOfBirth) { %>
                            <p class="text-muted">
                                <i class="fas fa-birthday-cake me-1"></i>
                                <%= new Date(user.profile.dateOfBirth).toLocaleDateString() %>
                            </p>
                        <% } %>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card shadow mt-3">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-bolt me-1"></i>
                            Quick Actions
                        </h6>
                    </div>
                    <div class="card-body">
                        <% if (user.role === 'attendee') { %>
                            <a href="/events" class="btn btn-outline-primary btn-sm w-100 mb-2">
                                <i class="fas fa-ticket-alt me-1"></i>
                                Browse Events
                            </a>
                            <a href="#" class="btn btn-outline-secondary btn-sm w-100 mb-2">
                                <i class="fas fa-history me-1"></i>
                                My Tickets
                            </a>
                        <% } else { %>
                            <a href="/events/create" class="btn btn-outline-success btn-sm w-100 mb-2">
                                <i class="fas fa-plus me-1"></i>
                                Create Event
                            </a>
                            <a href="/organizer/dashboard" class="btn btn-outline-info btn-sm w-100 mb-2">
                                <i class="fas fa-tachometer-alt me-1"></i>
                                Dashboard
                            </a>
                        <% } %>
                        <a href="/auth/logout" class="btn btn-outline-danger btn-sm w-100">
                            <i class="fas fa-sign-out-alt me-1"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <!-- Profile Information -->
                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-user-edit me-1"></i>
                            Profile Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Personal Information</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Name:</strong></td>
                                        <td><%= user.name %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td><%= user.email %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Role:</strong></td>
                                        <td>
                                            <span class="badge bg-<%= user.role === 'organizer' ? 'success' : 'info' %>">
                                                <%= user.role === 'organizer' ? 'Organizer' : 'Attendee' %>
                                            </span>
                                        </td>
                                    </tr>
                                    <% if (user.profile.phone) { %>
                                    <tr>
                                        <td><strong>Phone:</strong></td>
                                        <td><%= user.profile.phone %></td>
                                    </tr>
                                    <% } %>
                                    <% if (user.profile.dateOfBirth) { %>
                                    <tr>
                                        <td><strong>Date of Birth:</strong></td>
                                        <td><%= new Date(user.profile.dateOfBirth).toLocaleDateString() %></td>
                                    </tr>
                                    <% } %>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6>Account Information</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Member Since:</strong></td>
                                        <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Last Login:</strong></td>
                                        <td>
                                            <%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString() : 'Never' %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Login Count:</strong></td>
                                        <td><%= user.loginCount %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            <span class="badge bg-<%= user.isActive ? 'success' : 'danger' %>">
                                                <%= user.isActive ? 'Active' : 'Inactive' %>
                                            </span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Organizer Information -->
                        <% if (user.role === 'organizer' && user.organizerProfile) { %>
                        <hr>
                        <h6>Organizer Information</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Company:</strong></td>
                                        <td><%= user.organizerProfile.companyName %></td>
                                    </tr>
                                    <% if (user.organizerProfile.website) { %>
                                    <tr>
                                        <td><strong>Website:</strong></td>
                                        <td>
                                            <a href="<%= user.organizerProfile.website %>" target="_blank">
                                                <%= user.organizerProfile.website %>
                                            </a>
                                        </td>
                                    </tr>
                                    <% } %>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <% if (user.organizerProfile.specialties && user.organizerProfile.specialties.length > 0) { %>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Specialties:</strong></td>
                                        <td>
                                            <% user.organizerProfile.specialties.forEach(specialty => { %>
                                                <span class="badge bg-secondary me-1"><%= specialty %></span>
                                            <% }); %>
                                        </td>
                                    </tr>
                                </table>
                                <% } %>
                            </div>
                        </div>
                        <% } %>

                        <!-- Preferences -->
                        <% if (user.profile.preferences && user.profile.preferences.categories.length > 0) { %>
                        <hr>
                        <h6>Preferences</h6>
                        <p><strong>Favorite Categories:</strong></p>
                        <div class="mb-3">
                            <% user.profile.preferences.categories.forEach(category => { %>
                                <span class="badge bg-primary me-1">
                                    <i class="fas fa-<%= category === 'movies' ? 'film' : category === 'stage-plays' ? 'theater-masks' : 'music' %> me-1"></i>
                                    <%= category.charAt(0).toUpperCase() + category.slice(1).replace('-', ' ') %>
                                </span>
                            <% }); %>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>CursedTicket</h5>
                    <p>Your premier destination for premium entertainment tickets.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 CursedTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
