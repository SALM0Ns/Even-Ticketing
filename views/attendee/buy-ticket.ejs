<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                CursedTicket
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/attendee/tickets">
                            <i class="fas fa-ticket-alt me-1"></i>My Tickets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mt-4">
        <div class="row">
            <!-- Event Details -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-ticket-alt me-2"></i>
                            Purchase Tickets
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="<%= event.image || '/images/default-event.jpg' %>" 
                                     alt="<%= event.name %>" 
                                     class="img-fluid rounded">
                            </div>
                            <div class="col-md-8">
                                <h3><%= event.name %></h3>
                                <p class="text-muted mb-3"><%= event.description %></p>
                                
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p><i class="fas fa-calendar me-2"></i><strong>Date:</strong> <%= new Date(event.date).toLocaleDateString() %></p>
                                        <p><i class="fas fa-clock me-2"></i><strong>Time:</strong> <%= new Date(event.date).toLocaleTimeString() %></p>
                                    </div>
                                    <div class="col-sm-6">
                                        <p><i class="fas fa-map-marker-alt me-2"></i><strong>Venue:</strong> <%= event.location.name %></p>
                                        <p><i class="fas fa-building me-2"></i><strong>City:</strong> <%= event.location.city %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ticket Purchase Form -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Select Tickets
                        </h5>
                    </div>
                    <div class="card-body">
                        <form action="/attendee/buy/<%= event._id %>" method="POST">
                            <!-- Pricing Options -->
                            <div class="mb-4">
                                <h6>Select Ticket Type:</h6>
                                
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="pricingType" id="regular" value="regular" checked>
                                    <label class="form-check-label" for="regular">
                                        <strong>Regular</strong> - $<%= event.pricing.basePrice.toFixed(2) %>
                                    </label>
                                </div>
                                
                                <% if (event.pricing.studentPrice) { %>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="pricingType" id="student" value="student">
                                    <label class="form-check-label" for="student">
                                        <strong>Student</strong> - $<%= event.pricing.studentPrice.toFixed(2) %>
                                        <small class="text-muted d-block">Valid student ID required</small>
                                    </label>
                                </div>
                                <% } %>
                                
                                <% if (event.pricing.seniorPrice) { %>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="pricingType" id="senior" value="senior">
                                    <label class="form-check-label" for="senior">
                                        <strong>Senior (65+)</strong> - $<%= event.pricing.seniorPrice.toFixed(2) %>
                                        <small class="text-muted d-block">Valid ID required</small>
                                    </label>
                                </div>
                                <% } %>
                                
                                <% if (event.pricing.vipPrice) { %>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="pricingType" id="vip" value="vip">
                                    <label class="form-check-label" for="vip">
                                        <strong>VIP</strong> - $<%= event.pricing.vipPrice.toFixed(2) %>
                                        <small class="text-muted d-block">Premium seating & perks</small>
                                    </label>
                                </div>
                                <% } %>
                            </div>

                            <!-- Quantity Selection -->
                            <div class="mb-4">
                                <label for="quantity" class="form-label">Quantity:</label>
                                <select class="form-select" id="quantity" name="quantity" required>
                                    <option value="">Select quantity</option>
                                    <% for (let i = 1; i <= 10; i++) { %>
                                        <option value="<%= i %>"><%= i %> ticket<%= i > 1 ? 's' : '' %></option>
                                    <% } %>
                                </select>
                            </div>

                            <!-- Price Summary -->
                            <div class="mb-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Price Summary:</h6>
                                        <div id="priceSummary">
                                            <p class="mb-1">Regular: $<%= event.pricing.basePrice.toFixed(2) %></p>
                                            <p class="mb-1">Quantity: <span id="selectedQuantity">0</span></p>
                                            <hr>
                                            <p class="mb-0"><strong>Total: $<span id="totalPrice">0.00</span></strong></p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Purchase Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-credit-card me-2"></i>
                                    Purchase Tickets
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Event Info -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6><i class="fas fa-info-circle me-2"></i>Important Information</h6>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check me-2 text-success"></i>Tickets are non-refundable</li>
                            <li><i class="fas fa-check me-2 text-success"></i>Valid ID required for student/senior tickets</li>
                            <li><i class="fas fa-check me-2 text-success"></i>QR code will be sent to your email</li>
                            <li><i class="fas fa-check me-2 text-success"></i>Arrive 30 minutes before event start</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>CursedTicket</h5>
                    <p>Your premier destination for premium entertainment tickets.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 CursedTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Price calculation
        const pricingOptions = {
            regular: <%= event.pricing.basePrice %>,
            student: <%= event.pricing.studentPrice || 0 %>,
            senior: <%= event.pricing.seniorPrice || 0 %>,
            vip: <%= event.pricing.vipPrice || 0 %>
        };

        function updatePrice() {
            const selectedType = document.querySelector('input[name="pricingType"]:checked').value;
            const quantity = parseInt(document.getElementById('quantity').value) || 0;
            
            const pricePerTicket = pricingOptions[selectedType];
            const totalPrice = pricePerTicket * quantity;
            
            document.getElementById('selectedQuantity').textContent = quantity;
            document.getElementById('totalPrice').textContent = totalPrice.toFixed(2);
        }

        // Add event listeners
        document.querySelectorAll('input[name="pricingType"]').forEach(radio => {
            radio.addEventListener('change', updatePrice);
        });

        document.getElementById('quantity').addEventListener('change', updatePrice);

        // Initial price calculation
        updatePrice();
    </script>
</body>
</html>


