<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                CursedTicket
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/events" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-ticket-alt me-1"></i>Browse Events
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/attendee/tickets">
                            <i class="fas fa-history me-1"></i>My Tickets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">
                        <i class="fas fa-ticket-alt me-2"></i>
                        My Tickets
                    </h2>
                    <a href="/events" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Buy More Tickets
                    </a>
                </div>

                <% if (tickets && tickets.length > 0) { %>
                    <div class="row">
                        <% tickets.forEach(ticket => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card ticket-card h-100">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <span class="badge bg-primary">
                                            <i class="fas fa-ticket-alt me-1"></i>
                                            Ticket #<%= ticket.ticketNumber %>
                                        </span>
                                        <span class="badge bg-<%= ticket.status === 'active' ? 'success' : 'secondary' %>">
                                            <%= ticket.status.charAt(0).toUpperCase() + ticket.status.slice(1) %>
                                        </span>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title"><%= ticket.ticketDetails.eventName %></h5>
                                        <p class="card-text text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= new Date(ticket.ticketDetails.eventDate).toLocaleDateString() %>
                                        </p>
                                        <p class="card-text text-muted">
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            <%= ticket.ticketDetails.venue %>
                                        </p>
                                        <p class="card-text text-muted">
                                            <i class="fas fa-tag me-1"></i>
                                            $<%= ticket.price.toFixed(2) %> 
                                            <small class="text-uppercase">(<%= ticket.pricingType %>)</small>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Purchased: <%= new Date(ticket.purchaseDate).toLocaleDateString() %>
                                            </small>
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <% if (ticket.qrCode && ticket.qrCode.image) { %>
                                            <button class="btn btn-outline-primary btn-sm w-100" onclick="showQRCode('<%= ticket.qrCode.image %>')">
                                                <i class="fas fa-qrcode me-1"></i>Show QR Code
                                            </button>
                                        <% } else { %>
                                            <span class="text-muted">
                                                <i class="fas fa-info-circle me-1"></i>
                                                QR Code will be generated at event
                                            </span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-ticket-alt fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No tickets found</h4>
                        <p class="text-muted">You haven't purchased any tickets yet.</p>
                        <a href="/events" class="btn btn-primary btn-lg">
                            <i class="fas fa-search me-2"></i>Browse Events
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- QR Code Modal -->
    <div class="modal fade" id="qrCodeModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ticket QR Code</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="qrCodeImage" src="" alt="QR Code" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>CursedTicket</h5>
                    <p>Your premier destination for premium entertainment tickets.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 CursedTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function showQRCode(qrCodeImage) {
            document.getElementById('qrCodeImage').src = qrCodeImage;
            new bootstrap.Modal(document.getElementById('qrCodeModal')).show();
        }
    </script>
</body>
</html>


