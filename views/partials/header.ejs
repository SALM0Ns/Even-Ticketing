<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - CursedTicket</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- CursedTicket Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-primary shadow-lg">
        <div class="container">
            <!-- Brand Logo -->
            <a class="navbar-brand fw-bold fs-3" href="/">
                <i class="fas fa-ticket-alt me-2 text-warning"></i>
                <span class="text-white">CursedTicket</span>
            </a>
            
            <!-- Mobile Toggle Button -->
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Main Navigation Links -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link fw-semibold px-3" href="/">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-semibold px-3" href="#" id="eventsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-calendar-alt me-1"></i>Events
                        </a>
                        <ul class="dropdown-menu bg-dark border-0 shadow-lg" aria-labelledby="eventsDropdown">
                            <li><a class="dropdown-item text-white" href="/events">
                                <i class="fas fa-th me-2"></i>All Events
                            </a></li>
                            <li><hr class="dropdown-divider bg-secondary"></li>
                            <li><a class="dropdown-item text-white" href="/events?category=movies">
                                <i class="fas fa-film me-2 text-primary"></i>Movies
                            </a></li>
                            <li><a class="dropdown-item text-white" href="/events?category=stage-plays">
                                <i class="fas fa-theater-masks me-2 text-success"></i>Stage Plays
                            </a></li>
                            <li><a class="dropdown-item text-white" href="/events?category=orchestra">
                                <i class="fas fa-music me-2 text-warning"></i>Live Orchestra
                            </a></li>
                        </ul>
                    </li>
                </ul>
                
                <!-- Right Side Navigation -->
                <ul class="navbar-nav">
                    <!-- Search Button -->
                    <li class="nav-item">
                        <a class="nav-link px-3" href="#" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="fas fa-search"></i>
                        </a>
                    </li>
                    
                    <!-- User Menu -->
                    <% if (user) { %>
                        <!-- User-specific Menu -->
                        <% if (user.role === 'organizer') { %>
                            <li class="nav-item">
                                <a class="nav-link px-3" href="/organizer/dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3" href="/organizer/events">
                                    <i class="fas fa-calendar-plus me-1"></i>My Events
                                </a>
                            </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link px-3" href="/attendee/tickets">
                                    <i class="fas fa-ticket-alt me-1"></i>My Tickets
                                </a>
                            </li>
                        <% } %>
                        
                        <!-- User Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-3" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>
                                <%= user.name %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end bg-dark border-0 shadow-lg" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item text-white" href="/profile">
                                    <i class="fas fa-user-edit me-2"></i>Profile
                                </a></li>
                                <li><hr class="dropdown-divider bg-secondary"></li>
                                <li><a class="dropdown-item text-white" href="/auth/logout">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <!-- Guest Menu -->
                        <li class="nav-item">
                            <a class="nav-link px-3" href="/auth/login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-warning text-dark fw-semibold px-3 ms-2" href="/auth/register">
                                <i class="fas fa-user-plus me-1"></i>Sign Up
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">
                        <i class="fas fa-search me-2"></i>Search Events
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="input-group">
                        <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="Search for events...">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div class="mt-3">
                        <h6 class="text-muted">Popular Searches:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-secondary">Movies</span>
                            <span class="badge bg-secondary">Concert</span>
                            <span class="badge bg-secondary">Theater</span>
                            <span class="badge bg-secondary">Dance</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (info && info.length > 0) { %>
        <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
            <%= info %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container-fluid">
