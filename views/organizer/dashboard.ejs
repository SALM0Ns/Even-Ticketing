<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                CursedTicket
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/organizer/events/create">
                            <i class="fas fa-plus me-1"></i>Create Event
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/organizer/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mt-4">
        <!-- Dashboard Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="mb-0">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Organizer Dashboard
                </h2>
                <p class="text-muted">Manage your events and track ticket sales</p>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title"><%= stats.totalEvents %></h4>
                                <p class="card-text">Total Events</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-calendar-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title"><%= stats.totalTicketsSold %></h4>
                                <p class="card-text">Tickets Sold</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-ticket-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">$<%= stats.totalRevenue.toFixed(2) %></h4>
                                <p class="card-text">Total Revenue</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-dollar-sign fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-bolt me-2"></i>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <a href="/organizer/events/create" class="btn btn-success w-100">
                                    <i class="fas fa-plus me-1"></i>Create Event
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/organizer/events" class="btn btn-primary w-100">
                                    <i class="fas fa-list me-1"></i>View All Events
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/events" class="btn btn-info w-100">
                                    <i class="fas fa-eye me-1"></i>Browse Events
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a href="/profile" class="btn btn-secondary w-100">
                                    <i class="fas fa-user me-1"></i>Edit Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Ticket Sales -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-ticket-alt me-2"></i>
                            Recent Ticket Sales
                        </h5>
                        <span class="badge bg-primary"><%= tickets.length %> Total Sales</span>
                    </div>
                    <div class="card-body">
                        <% if (tickets && tickets.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Ticket #</th>
                                            <th>Event</th>
                                            <th>Buyer</th>
                                            <th>Price</th>
                                            <th>Type</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% tickets.slice(0, 10).forEach(ticket => { %>
                                            <tr>
                                                <td>
                                                    <code><%= ticket.ticketNumber %></code>
                                                </td>
                                                <td>
                                                    <strong><%= ticket.event.name %></strong>
                                                    <br>
                                                    <small class="text-muted">
                                                        <%= new Date(ticket.event.date).toLocaleDateString() %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <%= ticket.user.name %>
                                                    <br>
                                                    <small class="text-muted"><%= ticket.user.email %></small>
                                                </td>
                                                <td>
                                                    <strong>$<%= ticket.price.toFixed(2) %></strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= ticket.pricingType === 'vip' ? 'warning' : ticket.pricingType === 'student' ? 'info' : ticket.pricingType === 'senior' ? 'secondary' : 'primary' %>">
                                                        <%= ticket.pricingType.charAt(0).toUpperCase() + ticket.pricingType.slice(1) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <%= new Date(ticket.purchaseDate).toLocaleDateString() %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= ticket.status === 'active' ? 'success' : 'secondary' %>">
                                                        <%= ticket.status.charAt(0).toUpperCase() + ticket.status.slice(1) %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <% if (tickets.length > 10) { %>
                                <div class="text-center mt-3">
                                    <a href="/organizer/tickets" class="btn btn-outline-primary">
                                        View All Sales (<%= tickets.length - 10 %> more)
                                    </a>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No ticket sales yet</h5>
                                <p class="text-muted">Create events to start selling tickets!</p>
                                <a href="/organizer/events/create" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>Create Your First Event
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>CursedTicket</h5>
                    <p>Your premier destination for premium entertainment tickets.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 CursedTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


