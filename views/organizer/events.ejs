<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-ticket-alt me-2"></i>
                CursedTicket
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/organizer/events/create">
                            <i class="fas fa-plus me-1"></i>Create Event
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/organizer/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/organizer/events">
                            <i class="fas fa-list me-1"></i>My Events
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-list me-2"></i>
                        My Events
                    </h2>
                    <a href="/organizer/events/create" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Create New Event
                    </a>
                </div>
                <p class="text-muted">Manage and track your events</p>
            </div>
        </div>

        <!-- Events List -->
        <% if (events && events.length > 0) { %>
            <div class="row">
                <% events.forEach(event => { %>
                    <div class="col-lg-6 mb-4">
                        <div class="card event-card h-100">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="<%= event.image || '/images/default-event.jpg' %>" 
                                         alt="<%= event.name %>" 
                                         class="img-fluid rounded-start h-100" 
                                         style="object-fit: cover;">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0"><%= event.name %></h5>
                                            <span class="badge bg-<%= event.status === 'upcoming' ? 'success' : event.status === 'ended' ? 'secondary' : 'warning' %>">
                                                <%= event.status.charAt(0).toUpperCase() + event.status.slice(1) %>
                                            </span>
                                        </div>
                                        
                                        <p class="card-text text-muted small mb-2">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= new Date(event.date).toLocaleDateString() %>
                                        </p>
                                        
                                        <p class="card-text text-muted small mb-2">
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            <%= event.location.name %>
                                        </p>
                                        
                                        <p class="card-text text-muted small mb-3">
                                            <i class="fas fa-tag me-1"></i>
                                            From $<%= event.pricing.basePrice %>
                                        </p>
                                        
                                        <p class="card-text small">
                                            <%= event.description ? event.description.substring(0, 100) + '...' : 'No description available' %>
                                        </p>
                                        
                                        <div class="d-flex gap-2 mt-3">
                                            <a href="/events/<%= event._id %>" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                            <a href="/organizer/events/<%= event._id %>/edit" class="btn btn-outline-warning btn-sm">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <button class="btn btn-outline-danger btn-sm" 
                                                    onclick="confirmDelete('<%= event._id %>', '<%= event.name %>')">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-calendar-plus fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No events found</h4>
                <p class="text-muted">You haven't created any events yet.</p>
                <a href="/organizer/events/create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Create Your First Event
                </a>
            </div>
        <% } %>
    </main>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the event "<span id="eventName"></span>"?</p>
                    <p class="text-danger"><strong>This action cannot be undone and will also delete all associated tickets.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete Event</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>CursedTicket</h5>
                    <p>Your premier destination for premium entertainment tickets.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 CursedTicket. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function confirmDelete(eventId, eventName) {
            document.getElementById('eventName').textContent = eventName;
            document.getElementById('deleteForm').action = `/organizer/events/${eventId}/delete`;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
</body>
</html>


